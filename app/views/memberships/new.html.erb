<h1>Invite a user</h1>
<% if current_user.account&.id == current_tenant.id %>
  <%= form_with(model: @user, url: memberships_path, method: :post) do |form| %>
    <% if @user.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@user.errors.count, "error") %> prohibited this @user from being saved:</h2>

        <ul>
          <% @user.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group">
      <%= form.label :email %>
      <%= form.text_field :email, class: "form-control" %>
    </div>

    <div class="actions">
      <%= form.submit "Invite user", class: "btn btn-primary" %>
    </div>
  <% end %>
  <%else%>
    <h1>You can not invite to this group because you are not the admin</h1>
<%end%>