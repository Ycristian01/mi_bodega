<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "users/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <%# <h4 class="ui dividing header">Account information</h4> %>
    
  <%= f.fields_for :account do |ac| %>
    <div class="field">
      <%= ac.label :name, "Account name" %><br />
      <%= ac.text_field :name, required: true %>
    </div>

    <div class="field">
      <%= ac.label :subdomain, "Account subdomain" %><br />
      <%= ac.text_field :subdomain, required: true %>
    </div>

    <div class="field">
      <%= ac.label :cc_number, "Credit card number" %><br />
      <%= ac.text_field :cc_number, required: true %>
    </div>

    <div class="field">
      <%= ac.label :plan, "Plan" %><br />
      <%= ac.text_field :plan, required: true %>
    </div>
  <%end%>
         
  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "users/shared/links" %>
