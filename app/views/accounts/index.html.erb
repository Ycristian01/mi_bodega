<h1 class="index-title">Availables accounts</h1>
<div class="ui centered grid">

  <table class="ui basic table">
    <thead>
      <tr>
        <th>Name</th>
        <th>Edit payment method</th>
        <th>Billing info</th>
      </tr>
    </thead>
      <tbody>
        <% @memberships.each do |member| %>
          <tr>
            <%if member.account.user_id == current_user.id%>
              <td> <%= link_to  "#{member.account.name} (admin)", account_select_path(member.account), method: :patch %> </td>
              <td> <%= link_to "Edit account", edit_user_registration_path%> </td>
              <% if member.account.plan=="free" %>
                <td>Don't available</td>
                <%else%>
                  <td><%= link_to "See billing info", account_billing_path(member.account) %></td>
              <%end%>

              <%else%>
                <td><%= link_to  member.account.name, account_select_path(member.account), method: :patch %></td>
                <td>Don't available</td>
                <td>Don't available</td>
            <%end%>   
          </tr>  
        <% end %>     
      </tbody>
  </table>
</div>