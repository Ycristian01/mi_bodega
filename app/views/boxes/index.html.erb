<h1>Boxes index</h1>

<ul>
  <% @boxes.each do |box| %>
    <li>
      <%= link_to box.name, box %> 
    </li>
  <% end %>
</ul>

<% if @current_account.plan=="free" && @boxes.count==1 %>
  <h5>You reached the maximun number of boxes allowed for your plan</h5>
  <%elsif @current_account.plan=="moderate" && @boxes.count==5 %>
    <h5>You reached the maximun number of boxes allowed for your plan</h5>
  <%else%>
    <%= link_to "add new box", new_box_path %>
<%end%>